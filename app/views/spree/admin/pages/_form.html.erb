<div data-hook="admin_page_form_fields">
  <div class="row" data-hook="admin_page_form_left">
<div class='col-sm-8'>
    <%= f.field_container :title do %>
	<div class='form-group'>
      <%= f.label :title %> <span class="text-danger">*</span><br />
      <%= f.text_field :title, :class => 'form-control' %>
      <%= f.error_message_on :title %>
  </div><!-- form-group -->
    <% end %>

    <%= f.field_container :slug do %>
		<div class='form-group'>
      <%= f.label :slug %> <span class="text-danger">*</span><br />
      <%= f.text_field :slug, :class => 'form-control' %>
      <%= f.error_message_on :slug %>
	  </div><!-- form-group -->
    <% end %>

    <%= f.field_container :body do %>
		<div class='form-group'>
      <%= f.label :body %> <span class="text-danger">*</span><br />
      <%= f.text_area :body, {rows: 12, :class => 'form-control'} %>
      <%= f.error_message_on :body %>
	  </div><!-- form-group -->
    <% end %>

  </div><!-- col -->
  <div class="col-sm-4" data-hook="admin_page_form_right">

    <%= f.field_container :layout do %>
		<div class='form-group'>
      <%= f.label :layout %>
      <%= f.text_field :layout, :class => 'form-control' %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :foreign_link do %>
	<div class='form-group'>
      <%= f.label :foreign_link %>
      <%= f.text_field :foreign_link, :class => 'form-control' %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :position do %>
	<div class='form-group'>
      <%= f.label :position %>
      <%= f.number_field :position, :min => 0, :class => 'form-control' %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :show_in_sidebar do %>
	<div class='form-group'>
      <%= f.check_box :show_in_sidebar %>
      <%= f.label :show_in_sidebar %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :show_in_header do %>
	<div class='form-group'>
      <%= f.check_box :show_in_header %>
      <%= f.label :show_in_header %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :show_in_footer do %>
	<div class='form-group'>
      <%= f.check_box :show_in_footer %>
      <%= f.label :show_in_footer %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :visible do %>
	<div class='form-group'>
      <%= f.check_box :visible %>
      <%= f.label :visible %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :render_layout_as_partial do %>
	<div class='form-group'>
      <%= f.check_box :render_layout_as_partial %>
      <%= f.label :render_layout_as_partial %>
	   </div><!-- form-group -->
    <% end %>

    <%= f.field_container :stores do %>
	<div class='form-group'>
      <%= f.label :stores, Spree.t(:stores)%><br />
      <% Spree::Store.all.each do |store| %>
        <%= check_box_tag "page[store_ids][]", store.id, @page.stores.include?(store) %> <%= store.name %>
      <% end %>
	   </div><!-- form-group -->
    <% end %>
      </div><!-- col -->
  </div><!-- row -->

  <div data-hook="admin_page_form_meta" class="row">
<div class='col-md-12'>
    <%= f.field_container :meta_title do %>
      <%= f.label :meta_title %>
      <%= f.text_field :meta_title, :class => 'form-control' %>
      <%= f.error_message_on :meta_title %>
    <% end %>

    <%= f.field_container :meta_keywords do %>
      <%= f.label :meta_keywords %>
      <%= f.text_field :meta_keywords, :class => 'form-control' %>
      <%= f.error_message_on :meta_keywords %>
    <% end %>

    <%= f.field_container :meta_description do %>
      <%= f.label :meta_description %>
      <%= f.text_field :meta_description, :class => 'form-control' %>
      <%= f.error_message_on :meta_description %>
    <% end %>
      </div><!-- col -->
  </div><!-- row -->  
  
  <div data-hook="admin_page_form_additional_fields"></div>
</div>
